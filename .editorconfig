root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.vue]
indent_size = 4

# Используем табы для отступов (Не указываем размер)
[*.js]
indent_style = tab
#indent_style = space
indent_size = 2

[*.vue]
indent_style = tab
indent_size = 2

[*.scss]
indent_style = tab
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2
